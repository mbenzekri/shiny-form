{
  "name": "@mbenzekri/shiny-form",
  "version": "1.0.0",
  "description": "A web component to display dynamic shiny forms described through decorated json schema",
  "author": "Mohamed Ben Zekri",
  "license": "Copyright (C) Mohamed Ben Zekri - All Rights Reserved",
  "main": "build/shiny-form.js",
  "module": "shiny-form",
  "type": "module",
  "repository": "https://github.com/mbenzekri/shiny-form",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build:clean": "del /Q .\\build\\*.js .\\build\\*.map .\\build\\*.d.ts",
    "build": "tsc",
    "build:rollup": "rollup -c ",
    "build:all": "npm run build:clean && npm run build && npm run build:rollup",
    "build:watch": "tsc --watch",
    "serve": "es-dev-server --node-resolve --watch",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile custom-elements.json",
    "test": "karma start karma.conf.cjs",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots"
  },
  "keywords": [
    "forms",
    "web-components",
    "lit-element",
    "typescript",
    "JSON schema"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-url": "^6.1.0",
    "@types/chai": "^4.2.22",
    "@types/json-schema": "^7.0.9",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^9.0.0",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "ajv": "^8.8.2",
    "ajv-i18n": "^4.2.0",
    "chai": "^4.3.4",
    "deepmerge": "^4.2.2",
    "eslint": "^8.2.0",
    "karma": "^6.3.8",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^2.0.1",
    "lit-analyzer": "^1.2.1",
    "lit-element": "^3.0.2",
    "markdown-it": "^12.3.2",
    "mocha": "^9.1.3",
    "punycode": "^2.1.1",
    "rollup": "^2.59.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.4.4",
    "uuid": "^8.3.2",
    "lit": "^2.2.7"
  }
}
